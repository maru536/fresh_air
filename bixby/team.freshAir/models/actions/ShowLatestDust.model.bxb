action (ShowLatestDust) {
  description (Print latest dust measurement to user)
  collect {
    input (userId) {
      type (userIdConcept)
      min (Required) max (One)
      default-init {
        intent {
          goal: SaveUserId
        }
      }
      
      validate {
        if (userId == '') {
          replan {
            intent {
              subplan {
                goal: SignIn
              }
              goal: SaveUserId
            }
          }
        }
      }
    }
  }
  
  output (latestDustConcept) {
    throws {
      error (FailApiCall) {
        on-catch {
          halt {
            dialog {
              template ("미세먼지 정보에 접근할 수 없어요.")
            }
          }
        }
      }
      error (NoLatestDust) {
        on-catch {
          halt {
            dialog {
              template ("측정된 미세먼지 정보가 없어요.")
            }
          }
        }
      }
    }
  }
  type (Calculation)
}
